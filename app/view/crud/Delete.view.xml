<mvc:View xmlns:core="sap.ui.core"
		controllerName="root.controller.crud.Delete"
		xmlns="sap.m"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:f="sap.ui.layout.form"
		xmlns:semantic="sap.f.semantic">  
	<semantic:SemanticPage 
		id="page"
        headerPinnable="false"
        toggleHeaderOnTitleClick="false">

		<semantic:titleHeading>
            <Title
                text="Delete"
                level="H2"/>
        </semantic:titleHeading>
		
		<semantic:content>
			<mvc:View >
				<FlexBox class="sapUiSmallMargin" alignItems="Center" justifyContent="Center" width="100%" >
					<Label text="Book id: " />
					<Input value="" class="sapUiSmallMargin" submit=".onDelete" id="deleteInput" />
				</FlexBox>

				<FlexBox class="sapUiSmallMargin" alignItems="Center" justifyContent="Center" width="100%" >
					<Button class="sapUiSmallMargin" text="Delete" press=".onDelete" ></Button>
				</FlexBox>

			</mvc:View>
			
		</semantic:content>
	</semantic:SemanticPage >
</mvc:View>		
