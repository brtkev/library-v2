<mvc:View xmlns:core="sap.ui.core"
		controllerName="root.controller.crud.Search"
		xmlns="sap.m"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:semantic="sap.f.semantic">
	<semantic:SemanticPage 
		id="page"
        headerPinnable="false"
        toggleHeaderOnTitleClick="false">

		<semantic:titleHeading>
            <Title
                text="Search"
                level="H2"/>
        </semantic:titleHeading>

		<semantic:content>
			<Table
                id="table"
                width="auto"
                items="{
                    path: '/books',
                    sorter: {
                        path: 'ID',
                        descending: false
                    }
                }"
                noDataText="There is no data available"
                growing="true"
                growingScrollToLoad="true">
				
				<headerToolbar>
                    <OverflowToolbar>
                        <Title
                            id="tableHeader"
                            text="List of Books"
                            level="H3"/>
                        <ToolbarSpacer />
                        <SearchField
                            id="searchField"
                            tooltip="Enter an Books name or a part of it."
                            search=".onSearch">
                            <layoutData>
                                <OverflowToolbarLayoutData
                                    maxWidth="200px"
                                    priority="NeverOverflow"/>
                            </layoutData>
                        </SearchField>
                    </OverflowToolbar>
                </headerToolbar>


				<columns>
					<Column
						hAlign="End"
						minScreenWidth="Small"
						demandPopin="true"
						width="4em">
						<Text text="{i18n>columnId}"/>
					</Column>
					<Column>
						<Text text="{i18n>columnTitle}"/>
					</Column>
					<Column>
						<Text text="Subtitle"/>
					</Column>
					<Column
						minScreenWidth="Small"
						demandPopin="true">
						<Text text="Description"/>
					</Column>
					<Column
						minScreenWidth="Small"
						demandPopin="true">
						<Text text="{i18n>columnAuthor}"/>
					</Column>
					<Column
						minScreenWidth="Tablet"
						demandPopin="false">
						<Text text="{i18n>columnCategory}"/>
					</Column>
					<Column
						hAlign="End">
						<Text text="{i18n>columnPrintDate}"/>
					</Column>
					<Column
						hAlign="End">
						<Text text="{i18n>columnEditor}"/>
					</Column>
					<Column
						hAlign="End">
						<Text text="Image"/>
					</Column>
					<Column
						hAlign="End">
						<Text text="Source"/>
					</Column>
				</columns>

				<items>
					<ColumnListItem
						type="Navigation"
						press=".onPress">
						<cells>
							<ObjectNumber number="{ID}" emphasized="false"/>
							<ObjectIdentifier title="{title}"/>
							<ObjectAttribute text="{subtitle}"/>
							<Text text="{descr}" maxLines="5" ></Text>
							<ObjectAttribute text="{authors}"/>
							<ObjectAttribute text="{categories}"/>
							<ObjectAttribute text="{publishDate}"/>
							<ObjectAttribute text="{editorial}"/>
							<Image src="{imageLink}" alt="book image" ></Image>
							<ObjectAttribute text="{source}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</semantic:content>

	</semantic:SemanticPage>
</mvc:View>